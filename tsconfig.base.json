{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-nutrition-models": ["models/index.ts"],
      "@nx-nutrition/nutrition-ui-lib": ["libs/nutrition-ui-lib/src/index.ts"]
    },
    "noPropertyAccessFromIndexSignature": true
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["apps/frontend/**/*", "apps/frontend-profile/**/*"]
}
